<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.david.recetapp">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecetApp"
        android:icon="@mipmap/icono_app_round">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".actividades.AddRecetasActivity" />
        <activity android:name=".actividades.VerRecetasActivity" />
        <activity android:name=".actividades.CalendarioActivity" />
        <activity android:name=".actividades.ListaCompraActivity" />
        <activity android:name=".actividades.RecetasDiaActivity" />
        <activity android:name=".actividades.EditarRecetaActivity" />
        <activity android:name=".actividades.AjustesCalendarioActivity" />
    </application>

</manifest>