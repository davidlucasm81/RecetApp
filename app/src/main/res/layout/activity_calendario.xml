<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/calendario_semanal"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_lunes"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="320dp"
            android:text="@string/inicial_lunes"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/btn_martes"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="320dp"
            android:text="@string/inicial_martes"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/btn_miercoles"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="320dp"
            android:text="@string/inicial_miercoles"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/btn_jueves"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="320dp"
            android:text="@string/inicial_jueves"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/btn_viernes"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="320dp"
            android:text="@string/inicial_viernes"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/btn_sabado"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="320dp"
            android:text="@string/incial_sabado"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/btn_domingo"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="320dp"
            android:text="@string/inicial_domingo"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck,TextContrastCheck" />

    </LinearLayout>

</LinearLayout>